# Uncomment the next line to define a global platform for your project
source 'https://github.com/CocoaPods/Specs.git'
workspace './Crisp.xcworkspace'
platform :ios, '10.0'

use_frameworks!
inhibit_all_warnings!

target 'Crisp' do

  pod 'Socket.IO-Client-Swift', '~> 10.0.0'
  pod 'SnapKit', '~> 3.2.0'
  pod 'ObjectMapper', '~> 2.2'
  pod 'RxSwift',    '~> 3.0'
  pod 'RxCocoa',    '~> 3.0'
  pod 'EasyTipView'
  pod 'SDWebImage'
  pod 'SDWebImage/GIF'
  pod 'Lightbox'
  pod 'SwiftEventBus', :tag => '2.2.0', :git => 'https://github.com/cesarferreira/SwiftEventBus.git'
  pod 'Alamofire', '~> 4.0'
  pod 'NVActivityIndicatorView'
  pod 'DateToolsSwift'
end

target 'Example' do
  pod 'Socket.IO-Client-Swift', '~> 10.0.0'
  pod 'SnapKit', '~> 3.2.0'
  pod 'ObjectMapper', '~> 2.2'
  pod 'RxSwift',    '~> 3.0'
  pod 'RxCocoa',    '~> 3.0'
  pod 'EasyTipView'
  pod 'SDWebImage'
  pod 'SDWebImage/GIF'
  pod 'Lightbox'
  pod 'SwiftEventBus', :tag => '2.2.0', :git => 'https://github.com/cesarferreira/SwiftEventBus.git'
  pod 'Alamofire', '~> 4.0'
  pod 'NVActivityIndicatorView'
  pod 'DateToolsSwift'
end